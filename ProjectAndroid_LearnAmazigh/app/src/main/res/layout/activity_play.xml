<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="180dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/Terugbtn"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            android:background="@drawable/btn_rounded"
            android:text="@string/terugIcon"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttondieren1"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorButtons"
            android:background="@drawable/btn_rounded"
            android:text="Dieren 1"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttonfruit"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Fruit"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorButtons"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttoninsecten"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Insecten"
            android:backgroundTint="@color/colorButtons"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttongroente"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorButtons"
            android:text="Groente"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttondieren2"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorButtons"
            android:background="@drawable/btn_rounded"
            android:text="Dieren 2"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttoneten"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Eten"
            android:backgroundTint="@color/colorButtons"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttonkleding"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Kleding"
            android:backgroundTint="@color/colorButtons"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttonweer"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Weer"
            android:backgroundTint="@color/colorButtons"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ctgbuttonkleuren"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Kleuren"
            android:backgroundTint="@color/colorButtons"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</ScrollView>